@model Projekat.ViewModels.RandomPreduzeceViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    var className = Model.Osoba.Count > 0 ? "popular" : null;
}

<h2 class=" @className ">@Model.Preduzece.ImePreduzeca</h2>
@if (Model.Osoba.Count==0)
{
    <text>No one has rented this preduzece</text>
}
else
{
    <ul>
        @foreach (var Osoba in Model.Osoba)
        {
            <li>@Osoba.Ime</li>
        }
    </ul>
}
